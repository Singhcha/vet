<h1 style="color: #6C3D0E">Listing doctors</h1>
<div class ="container">
  <table class="table table-striped">
    <thead>
      <tr>
        <th><h4>Name</h4></th>
        <th><h4>Address</h4></th>
        <th><h4>City</h4></th>
        <th><h4>State</h4></th>
        <th><h4>Zip</h4></th>
        <th><h4>School received degree</h4></th>
        <th><h4>Years in practice</h4></th>
        <th><h4>Actions</h4></th>
<!--         <th></th>
        <th></th> -->
      </tr>
    </thead>

    <tbody>
      <% @doctors.each do |doctor| %>
        <tr>
          <td><%= doctor.name %></td>
          <td><%= doctor.address %></td>
          <td><%= doctor.city %></td>
          <td><%= doctor.state %></td>
          <td><%= doctor.zip %></td>
          <td><%= doctor.school_received_degree %></td>
          <td><%= doctor.years_in_practice %></td>
          <td><%= link_to 'Show', doctor %>  <%= link_to 'Edit', edit_doctor_path(doctor) %>
          <%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <!-- <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
          <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Doctor', new_doctor_path ,class: "btn btn-success btn-lg" %>
</div>
