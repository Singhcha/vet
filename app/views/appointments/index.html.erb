
<style>
.table{

  border: 2px solid grey
}
.table thead {

  border: 2px solid grey
}

.table thead tr th{

  background-color: #BBC52A
}

.table thead tr th{

  background-color: #BBC52A
}


.table tbody tr td:hover{
  background-color: lightskyblue
}

.table:hover {

  border: 3px solid black
}

.btn:hover {

  border: 2px solid black
}

</style>


<h1 style="color: #6C3D0E">Listing appointments</h1>
<div class="container">
<table  class="table table-striped">
  <thead>
    <tr>
      <th>Doctor</th>
      <th>Date visit</th>
      <th>Pet</th>
      <th>Customer</th>
      <th>Reminder</th>
      <th>Reason for visit</th>
      <th>Actions</th>
      <!-- <th></th>
      <th></th> -->
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.doctor.name %></td>
        <td><%= appointment.date_visit %></td>
        <td><%= appointment.pet %></td>
        <td><%= appointment.customer %></td>
        <td><%= appointment.reminder %></td>
        <td><%= appointment.reason_for_visit %></td>
        <td><%= link_to 'Show', appointment %>          
        <%= link_to 'Edit', edit_appointment_path(appointment) %>                  <%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
  <%= link_to 'New Appointment', new_appointment_path ,class: "btn btn-success btn-lg" %>
</div>

